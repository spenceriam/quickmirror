{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickMirror",
  "version": "1.0.0",
  "identifier": "com.quickmirror.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "QuickMirror",
        "width": 320,
        "height": 300,
        "resizable": false,
        "center": true,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "targets": ["msi"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "updater": {
    "active": true,
    "endpoints": ["https://github.com/spenceriam/quickmirror/releases/latest/download/latest.json"],
    "dialog": true
  },
  "systemTray": {
    "iconPath": "icons/icon.ico",
    "iconAsTemplate": false
  }
}
