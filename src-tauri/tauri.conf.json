{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuikMirror",
  "version": "1.0.0",
  "identifier": "com.quikmirror.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "QuikMirror",
        "width": 320,
        "height": 300,
        "resizable": false,
        "center": true,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "targets": ["msi"],
    "shortDescription": "Quick camera/microphone validation before video calls",
    "longDescription": "QuikMirror is a Windows system tray utility that provides instant camera and microphone validation before video calls. Features real-time camera preview and audio level visualization.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
